{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "noEmit": true,
    "outDir": "./dist",

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,

    "newLine": "lf"
  },
  "include": ["src", "types"]
}
